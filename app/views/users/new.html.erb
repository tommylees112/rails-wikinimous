<h1>Signup!</h1>

<%= form_for :user, url: '/users' do |f| %>
  <%= f.label "Username" %>
  <%= f.text_field :name %>
  <%= f.label "Email" %>
  <%= f.text_field :email %>
  <%= f.label "Password" %>
  <%= f.password_field :password %>
   <%= f.label "Confirm Password" %>
  <%= f.password_field :password %>
  <%= f.submit "Submit" %>
<% end %>
